<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.despesas.controller.TelaPrincipalController">

    <padding><Insets top="10" left="10" right="10" bottom="10"/></padding>

    <Label fx:id="title" text="Controle de Despesas - Dark"/>

    <VBox spacing="10" styleClass="input-card">
        <GridPane hgap="10" vgap="10">
            <Label text="Descrição:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDescricao" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <Label text="Categoria:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <ComboBox fx:id="cbCategoria" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

            <Label text="Valor:" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
            <TextField fx:id="txtValor" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Data:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpData" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

            <Button text="Adicionar" onAction="#adicionarDespesa" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
            <Button fx:id="btnRemover" text="Remover" onAction="#removerSelecionada" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
        </GridPane>
    </VBox>

    <TableView fx:id="tabelaDespesas">
        <columns>
            <TableColumn fx:id="colDescricao" text="Descrição" prefWidth="300"/>
            <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="150"/>
            <TableColumn fx:id="colValor" text="Valor" prefWidth="100"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
        </columns>
    </TableView>

    <Label fx:id="totalLabel" text="Total: R$ 0,00"/>

</VBox>
